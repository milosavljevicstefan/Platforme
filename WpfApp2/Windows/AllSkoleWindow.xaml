<Window x:Class="WpfApp2.Windows.AllSkoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="AllSkoleWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,396">
            <MenuItem Name="miDodajSkolu" Header="Dodaj skolu" Click="miDodajSkolu_Click"/>
            <MenuItem Name="miIzmeniSkolu" Header="Izmeni skolu" Click="miIzmeniSkolu_Click"/>
            <MenuItem Name="miObrisiSkolu" Header="Obrisi skolu" Click="miObrisiSkolu_Click"/>
            <MenuItem Name="miVratiNaPocetnu" Header="Vrati se na pocetnu stranu" Width="155" Click="miVratiNaPocetnu_Click"></MenuItem>
        </Menu>
        <DataGrid x:Name="dgSkole" CanUserAddRows="False" HorizontalAlignment="Left" Height="174" Margin="10,35,0,0" VerticalAlignment="Top" Width="772"/>
    </Grid>
</Window>
